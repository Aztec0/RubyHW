<div class='container'>
  <h1>Order #<%= @order.id %></h1>
  <table class='table'>
    <tr>
      <th>#</th>
      <th></th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    <% @order.cart.line_items.each.with_index do |line_item, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><% if line_item.product.image.attached? %>
            <%= image_tag line_item.product.image.variant(:thumb),  width: 80, height: 80 %>
          <% else %>
            <%= image_tag("no_image.jpeg", height: 200, alt: 'No image') %>
          <% end %></td>
        <td><%= line_item.product.name %></td>
        <td><%= line_item.quantity %></td>
        <td><%= number_to_currency(line_item.total_price) %></td>
      </tr>
    <% end%>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td><b>Total price:</b></td>
      <td><b><%= number_to_currency @order.cart.total_price %></b></td>
    </tr>
  </table>
</div>