<% if current_user %>
  <div class="container text-center">
    <h3>Your Orders</h3>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <table class='table table-hover'>
        <thead>
          <tr>
            <th>#</th>
            <th>Status</th>
            <th>Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
          <td><%= order.id %></td>
          <td><%= order.status %></td>
          <td><%= number_to_currency order.cart.total_price %></td>
          <td>
            <div class="row">
            <div class="col">
                <%= link_to "Show", order_path(order), class: "btn btn-outline-secondary" %>
              </div>
              <div class="col">
                <%= button_to "Delete", order_path(order), method: :delete, class: "btn btn-outline-secondary" %>
              </div>
            </div>
          </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
<% else %>
    <h3>You don't have any orders </h3>
  </div>
<% end %>
